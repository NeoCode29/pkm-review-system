# ==============================================
# Database Configuration
# ==============================================
POSTGRES_PASSWORD=your-super-secret-password-change-this-in-production

# ==============================================
# Supabase Auth Configuration
# ==============================================
# JWT Secret (MUST be at least 32 characters)
JWT_SECRET=your-super-secret-jwt-token-with-at-least-32-characters-long-change-this-in-production

# API External URL (for auth redirects)
API_EXTERNAL_URL=http://localhost:9999

# Site URL (frontend URL for redirects)
SITE_URL=http://localhost:3000

# Additional allowed URIs (comma-separated)
ADDITIONAL_ALLOWED_URIS=

# Disable user signup (set to true to disable public registration)
DISABLE_SIGNUP=false

# JWT Expiry (in seconds, default 3600 = 1 hour)
JWT_EXPIRY=3600

# Email auto-confirmation (set to false to require email verification)
MAILER_AUTOCONFIRM=true

# ==============================================
# SMTP Configuration (for email verification)
# ==============================================
SMTP_ADMIN_EMAIL=admin@example.com
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
